// JavaScript Document

{
  "name": "Ads for Charity",
  "version":"1.0",
  "description":"Extension that puts adds on your computer for charity",
  "permissions": [
    "tabs", "<all_urls>"
  ],  
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["jquery/jquery-ui-1.8.16.custom.css", "css/custom.css", "css/icons.css"],
      "js": [ "jquery/jquery-1.6.2.min.js", "jquery/jquery-ui-1.8.16.custom.min.js", "drag.js"],
      "run_at": "document_end"
    }
  ],
  "background_page": "background.html",
  "options_page": "options.html"
}
